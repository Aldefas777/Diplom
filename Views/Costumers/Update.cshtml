@{
    ViewData["Title"] = "Update";
}
<h1>@ViewData["Title"]</h1>

<form method ="post">
    <div>
        <div class="form-group">
           <input name="Id" type="hidden" size="50" value="@ViewBag.Id" />
       </div>
       <div class="form-group">
           <label>Имя</label>
           <input name="Names" type="text" size="50" value="@ViewBag.Names" />
       </div>
       <div class="form-group">
           <label>Фамилия</label>
           <input name="Surname" type="text" size="50" value="@ViewBag.Surname" />
       </div>
       <div class="form-group">
           <label>Отчество</label>
           <input name="SecondName" type="text" size="50" value="@ViewBag.SecondName"" />
       </div>
       <div class="form-group">
           <label>Абониметн</label>
           <input name="Aboniment" type="text" size="50" value="@ViewBag.Aboniment"" />
       </div>
       <input type="submit" value="Update" class="submit" />
    </div>
</form>
